{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
   
<div class="container">
  <div class="main-login-container">
    <div class="row sub-login-container">
      <div class="main-login main-center">
      <h2 class="main-heading">Login</h2>
        <form action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}
          <div class="form-group">
            <label for="email" class="cols-sm-2 control-label">{{ 'security.login.username'|trans }}</label>
            <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
                <input type="text"  class="form-control" id="username" name="_username" value="{{ last_username }}" placeholder="Username" required="required" />
              </div>
            </div>
          </div>

          <div class="form-group">
            <label for="password" class="cols-sm-2 control-label">{{ 'security.login.password'|trans }}</label>
            <div class="cols-sm-10">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                <input type="password" class="form-control" id="password" name="_password" placeholder="Password" required="required" />
              </div>
            </div>
          </div>
          <div class="form-group">								
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            <a class="pull-right" href="#">Forgot password ?</a>
          </div>
          <div class="form-group">
            <input class="btn btn-primary btn-lg btn-block login-button" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
          </div>
          
        </form>
        <p class="sign-up-link">Still no account? Please go to <a href="/register">Sign up</a></p>
      </div>
    </div>
  </div>
</div>